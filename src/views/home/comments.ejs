<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comments</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .comment-container {
            max-width: 800px;
            margin: 0 auto;
            margin-bottom: 100px; /* Additional space for the fixed form */
        }
        .comment {
            margin-bottom: 20px;
            padding: 15px;
            border-radius: 10px;
            background-color: #e9ecef;
            position: relative;
        }
        .comment-owner {
            font-weight: bold;
            color: #495057;
        }
        .comment-text {
            margin-top: 5px;
            color: #343a40;
        }
        .comment-score {
            margin-top: 10px;
            color: #f39c12;
        }
        .star {
            color: #f39c12;
        }
        .fixed-bottom-form {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: white;
            box-shadow: 0 -2px 5px rgba(0,0,0,0.1);
            padding: 10px;
            z-index: 1000;
        }
    </style>
</head>
<body>

    <div class="container mt-5 comment-container">
        <h1 class="text-center mb-4">Comments</h1>
        <% comments.forEach(el => { %>
            <div class="comment">
                <div class="comment-owner"><%= el.user %></div>
                <div class="comment-text"><%= el.comment %></div>
                <div class="comment-score">
                    <% for (let i = 0; i < el.score; i++) { %>
                        <i class="fas fa-star star"></i>
                    <% } %>
                    <% for (let i = el.score; i < 5; i++) { %>
                        <i class="far fa-star star"></i>
                    <% } %>
                </div>
            </div>
        <% }) %>
    </div>

    <div class="fixed-bottom-form">
        <form action="/comments/<%= productId %>" method="post" class="container">
            <textarea required class="form-control mb-3" name="comment" rows="3" placeholder="Add comment"></textarea>
            <input required class="form-control mb-3" type="number" name="score" min="0" max="5" placeholder="Your score">
            <button class="btn btn-outline-success w-100">Submit</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
