<!-- admins/admins.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admins List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/admins">Admins</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admins/categories">Categories</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admins/products">Products</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/orders">Orders</a>
              </li>
            </ul>
            <a href="/admins/profile" class="btn btn-outline-success">Profile</a>
          </div>
        </div>
    </nav>
    <div class="container">
        <h1>Admins List</h1>
        <div class="row">
            <% admins.forEach(admin => { %>
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= admin.fullname %></h5>
                            <p class="card-text">Username: <%= admin.username %></p>
                            <p class="card-text">Phone: <%= admin.phone %></p>
                            <!-- Add more details as needed -->
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Add Admin Button -->
        <a href="/admins/create" class="btn btn-success mt-3">Add Admin</a>
    </div>
</body>
</html>
